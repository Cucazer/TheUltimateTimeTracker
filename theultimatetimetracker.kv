#:kivy 1.0.9

<ChoiceWheel>:
    GridLayout:
        size: root.size # set the size manually
        pos: root.pos
        cols: 3
        rows: 5
        Label:
        MDRaisedButton:
            on_release: root.on_button_click(self)
            id: button0
            text: "C1/T1"
        Label:
        MDRaisedButton:
            on_release: root.on_button_click(self)
            id: button1
            text: "C2/T2"
        Label:
        MDRaisedButton:
            on_release: root.on_button_click(self)
            id: button2
            text: "C3/T3"
        Label:
        MDTextField:
            mode: "rectangle"
            on_text_validate: root.on_input_submit(self)
            id: task_name
            multiline: False
            disabled: True
        Label:
        MDRaisedButton:
            on_release: root.on_button_click(self)
            id: button3
            text: "C4/T4"
        Label:
        MDRaisedButton:
            on_release: root.on_button_click(self)
            id: button4
            text: "C5/T5"
        Label:
        MDRaisedButton:
            on_release: root.on_more_button_click()
            id: more
            text: "More"
        Label:

<MainForm>:
    GridLayout:
        size: root.size # set the size manually
        cols: 3
        rows: 2
        BoxLayout:
            size_hint: (1, None)
            height: 100
            orientation: "vertical"
            MDRaisedButton:
                on_release: root.create_new_task()
                text: "New task"
            MDRaisedButton:
                on_release: root.generate_plot()
                text: "Generate plot"
        Label:
            size_hint: (None, None)
            height: 100
        MDLabel:
            id: current_task
            size_hint: (None, None)
            height: 100
            text: "Current task"
        MDGridLayout:
            cols: 1
            rows: 4
            height: self.minimum_height
            #orientation: "vertical"
            #adaptive_height: True

            MDLabel:
                halign: "center"
                height: 50
                size_hint: (1, None)
                text: "Create time entry:"
            MDBoxLayout:
                orientation: "horizontal"
                height: 50
                size_hint: (1, None)

                MDLabel:
                    text: "Start time:"
                MDTextField:
                    mode: "rectangle"
            MDBoxLayout:
                orientation: "horizontal"
                height: 50
                size_hint: (1, None)

                MDLabel:
                    text: "End time:"
                MDTextField:
                    mode: "rectangle"
            MDRaisedButton:
                height: 50
                size_hint: (1, None)
                text: "Choose task"
        ChoiceWheel:
            id: choice_wheel
        MDLabel:
            text: "Task property table"
        # causes https://github.com/kivymd/KivyMD/issues/596
        # wait for the next release or manage versions
        # MDDataTable:
        #     column_data: [("Property",), ("Value",)]
        #     orientation: "lr-tb"
