#:kivy 1.0.9

<ChoiceButton>
    canvas.before:
        Color:
            rgb: 0, 1, 0
        Ellipse:
            id: ellipse
            angle_start: self.i * 60 - 25
            angle_end: self.i * 60 + 25
            size: root.size[0] * 2, root.size[1] * 2
            pos: self.root_pos_x, self.root_pos_y
        Line:
            width: 1.1
            rectangle: self.x, self.y, self.width, self.height

    text: "test"
    color: 0, 0, 0

<ChoiceWheel>:
    FloatLayout:
        size: root.size # set the size manually
        pos: root.pos
        ChoiceButton:
            size_hint: .5, .5
            pos_hint: {'x': 0, 'y': .5}
            on_release: root.on_button_click(self)
            id: button1
            text: "C2/T2"
            i: 5
            root_pos_x: root.pos[0]
            root_pos_y: root.pos[1]
        ChoiceButton:
            size_hint: .5, .5
            pos_hint: {'x': .25, 'y': .5}
            on_release: root.on_button_click(self)
            id: button0
            text: "C1/T1"
            i: 0
            root_pos_x: root.pos[0]
            root_pos_y: root.pos[1]
        ChoiceButton:
            size_hint: .5, .5
            pos_hint: {'x': .5, 'y': .5}
            on_release: root.on_button_click(self)
            id: button2
            text: "C3/T3"
            i: 1
            root_pos_x: root.pos[0]
            root_pos_y: root.pos[1]
        MDTextField:
            mode: "rectangle"
            on_text_validate: root.on_input_submit(self)
            id: task_name
            multiline: False
            disabled: True
            pos_hint: {'x': .35, 'y': .45}
            size_hint: .3, .1
        ChoiceButton:
            size_hint: .5, .5
            pos_hint: {'x': 0, 'y': 0}
            on_release: root.on_button_click(self)
            id: button3
            text: "C4/T4"
            i: 4
            root_pos_x: root.pos[0]
            root_pos_y: root.pos[1]
        ChoiceButton:
            size_hint: .5, .5
            pos_hint: {'x': .25, 'y': 0}
            on_release: root.on_more_button_click()
            id: more
            text: "More"
            i:3
            root_pos_x: root.pos[0]
            root_pos_y: root.pos[1]
        ChoiceButton:
            size_hint: .5, .5
            pos_hint: {'x': .5, 'y': 0}
            on_release: root.on_button_click(self)
            id: button4
            text: "C5/T5"
            i: 2
            root_pos_x: root.pos[0]
            root_pos_y: root.pos[1]

<MainForm>:
    GridLayout:
        size: root.size # set the size manually
        cols: 3
        rows: 2
        spacing: (10, 10)
        BoxLayout:
            size_hint: (1, None)
            height: 100
            orientation: "vertical"
            MDRaisedButton:
                on_release: root.create_new_task()
                text: "New task"
            MDRaisedButton:
                on_release: root.generate_plot()
                text: "Generate plot"
        Label:
            size_hint: (None, None)
            height: 100
        MDLabel:
            id: current_task
            size_hint: (None, None)
            height: 100
            text: "Current task"
        MDGridLayout:
            id: enter_time
            cols: 1
            rows: 4
            height: self.minimum_height
            spacing: (0, 10)
            #orientation: "vertical"
            #adaptive_height: True

            MDLabel:
                halign: "center"
                height: 50
                size_hint: (1, None)
                text: "Create time entry:"
            MDBoxLayout:
                orientation: "horizontal"
                height: 30
                size_hint: (1, None)

                MDLabel:
                    text: "Start time:"
                MDTextFieldRect:
                    id: start_time
                    mode: "rectangle"
                    on_touch_up:root.show_date_picker(args[1])
                    width:140
            MDBoxLayout:
                orientation: "horizontal"
                height: 30
                size_hint: (1, None)

                MDLabel:
                    text: "End time:"
                MDTextFieldRect:
                    id: end_time
                    mode: "rectangle"
                    on_touch_up:root.show_date_picker(args[1])
                    width:150
                    height: 30
                    size_hint: (1,1)
            MDRaisedButton:
                id: select_task
                disabled: True
                height: 50
                size_hint: (1, None)
                text: "Select task"
                on_release: root.select_task()
        ChoiceWheel:
            id: choice_wheel
        MDLabel:
            text: "Task property table"
        # causes https://github.com/kivymd/KivyMD/issues/596
        # wait for the next release or manage versions
        # MDDataTable:
        #     column_data: [("Property",), ("Value",)]
        #     orientation: "lr-tb"
